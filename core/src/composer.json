{
    "require": {
        "php": "^7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "slim/slim": "4.*",
        "slim/psr7": "^1.1",
        "php-di/php-di": "^6.1",
        "php-di/slim-bridge": "^3.0",
        "monolog/monolog": "^2.1",
        "lcobucci/jwt": "^3.3",
        "symfony/polyfill-uuid": "^1.17",
        "cakephp/chronos": "^2.0",
        "vlucas/phpdotenv": "^5.0",
        "webmozart/assert": "^1.9",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7 || ^8",
        "mockery/mockery": "^1.4",
        "symfony/var-dumper": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "App\\" : "app/"
        },
        "files": [
            "supports/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always"
    }
}
